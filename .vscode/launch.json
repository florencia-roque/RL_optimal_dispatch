{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RL: Ejecución Personalizada",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--alg", "${input:chooseAlg}",
                "--mode", "${input:chooseMode}",
                "--det", "${input:chooseDet}",
                "--total-episodes", "${input:episodes}",
                "--mode-eval", "${input:evalMode}"
            ],
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "console": "integratedTerminal"
        },
        {
            "name": "RL Tuning (Optuna)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--alg", "${input:chooseAlg}",
                "--mode", "tune",
                "--n-trials", "10",
                "--det", "${input:chooseDet}",
                "--a2c-dummy"
            ],
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "chooseAlg",
            "type": "pickString",
            "description": "Algoritmo de RL:",
            "options": ["ppo", "a2c", "ql"],
            "default": "ppo"
        },
        {
            "id": "chooseMode",
            "type": "pickString",
            "description": "Modo de ejecución:",
            "options": ["train", "train_eval", "eval", "tune"],
            "default": "train"
        },
        {
            "id": "episodes",
            "type": "promptString",
            "description": "Número de episodios:",
            "default": "2000"
        },
        {
            "id": "evalMode",
            "type": "pickString",
            "description": "Modo de evaluación:",
            "options": ["historico", "markov"],
            "default": "historico"
        },
        {
            "id": "chooseDet",
            "type": "pickString",
            "description": "Usar aportes determinísticos (1) o estocásticos (0):",
            "options": ["0", "1"],
            "default": "0"
        }
    ]
}